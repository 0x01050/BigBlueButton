<?xml version="1.0"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
                xmlns:mate="http://mate.asfusion.com/" 
        				width="600"
        				horizontalAlign="center"
        				title="Audio Warning"
               >

    <mx:Script>
        <![CDATA[
            import mx.managers.PopUpManager;   
                               
            public var micsettings:MicSettings;
            
            private function joinAnyway():void {                          
                PopUpManager.removePopUp(this);
                micsettings.hideChromeAllow();
                micsettings.joinConference();
                
            }
        ]]>
    </mx:Script>
    <mx:Text width="100%" textAlign="center" text="Your microphone did not show any activity, you won't be able to hear anything during the session." />  
    <mx:HBox>      
        <mx:Button click="joinAnyway();" label="Join anyway"/> 
        <mx:Button label="Test again" click="PopUpManager.removePopUp(this);"/> 
    </mx:HBox> 
</mx:TitleWindow>
