<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 styleName="participantIcon">



	<fx:Script>
		<![CDATA[
			[Bindable]
			public var displayInitials:String;
		]]>
	</fx:Script>

	<s:Label id="firstLetters"
			 text="{displayInitials}"
			 paddingTop="0"
			 paddingLeft="0"
			 paddingBottom="0"
			 paddingRight="0"
			 verticalCenter="0"
			 horizontalCenter="0" />

	<s:Ellipse id="circle"
			   height="{getStyle('height')}"
			   width="{getStyle('width')}"
			   verticalCenter="0"
			   horizontalCenter="0">
		<s:stroke>
			<s:SolidColorStroke id="circleColor"
								color="{getStyle('circleColor')}"
								weight="{getStyle('circleStroke')}" />
		</s:stroke>
	</s:Ellipse>
</s:Group>
