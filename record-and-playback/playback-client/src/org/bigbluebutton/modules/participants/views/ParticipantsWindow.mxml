<viewer:MDIWindow xmlns:mx="http://www.adobe.com/2006/mxml"
				  xmlns:viewer="flexlib.mdi.containers.*" 
				  implements="org.bigbluebutton.common.IBbbModuleWindow" 
				  xmlns:mate="http://mate.asfusion.com/"
				  title="{windowTitle}"
				  showCloseButton="false">
	
	<mate:Listener type="{ParticipantsEvent.JOIN_EVENT}" method="handleJoinEvent" />
	<mate:Listener type="{ParticipantsEvent.LEAVE_EVENT}" method="handleLeaveEvent" />
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			import org.bigbluebutton.main.views.MainCanvas;
			import org.bigbluebutton.modules.participants.events.ParticipantsEvent;
			
			[Bindable]
			private var windowTitle:String = "Participants Module";
			
			[Bindable]
			public var participants:ArrayCollection = new ArrayCollection();
			
			public function getPrefferedPosition():String{
				return MainCanvas.TOP_LEFT;
			}
			
			public function handleJoinEvent(evt:ParticipantsEvent):void{
				var obj:Object=new Object();
				obj.name=evt.name;
				obj.userid=evt.userid;
				participants.addItem(obj);
			}
			public function handleLeaveEvent(evt:ParticipantsEvent):void{
				for(var i:int=0;i<participants.length;i++){
					var obj:Object=participants.getItemAt(i);
					if(obj.userid==evt.userid)
						participants.removeItemAt(i);
				}
			}
		]]>
	</mx:Script>
	
	<mx:DataGrid id="viewersGrid" dataProvider="{participants}" editable="false"
				 dragEnabled="false" width="100%" height="100%">
		<mx:columns>
			<mx:DataGridColumn dataField="name" headerText="name" editable="true" width="100" sortable="false"
							   itemRenderer="org.bigbluebutton.modules.participants.views.NameItemRenderer"/>
			<mx:DataGridColumn dataField="status" headerText="status" sortable="false"
							   itemRenderer="org.bigbluebutton.modules.participants.views.StatusItemRenderer"/>
		</mx:columns>
	</mx:DataGrid>
	
</viewer:MDIWindow>
